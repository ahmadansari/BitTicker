# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

# Comment the next line if you're not using Swift and don't want to use dynamic frameworks
use_frameworks!

def defaultPods
  pod 'AXReachability', '0.1.0'
  pod 'Localize-Swift', '2.0.0'
  pod 'RxSwift', '4.3.1'
  pod 'SwiftyBeaver', '1.6.1'
  pod 'Starscream'
  pod 'SwiftLint'
  pod 'IQKeyboardManager'
end

target 'BitTicker' do
  # Pods for BitTicker
  defaultPods
end


target 'BitTickerTests' do
  inherit! :search_paths
  # Pods for testing
end

target 'BitTickerUITests' do
  inherit! :search_paths
  # Pods for testing
end

